#!/bin/bash

    red='\033[33;31m'
    green='\033[33;32m'
    blue='\033[33;34m'
    white='\033[1;37m'
    BPurple='\033[1;35m'

echo -e "$green

    â•”â•â•â•â•—             â•”â•—         â•”â•—  â•”â•—                      
    â•‘â•”â•â•—â•‘            â•”â•â•šâ•—        â•‘â•šâ•—â•”â•â•‘                      
    â•‘â•šâ•â•â•‘â•”â•â•â•—â•”â•—â•”â•—â•”â•â•â•—â•šâ•—â•”â•â•”â•â•â•—    â•šâ•—â•‘â•‘â•”â•â•”â•—â•”â•â•â•—â•”â•—â•”â•—â•”â•—â•”â•—â•”â•â•— â•”â•â•â•—
